module kind_mod
  ! KIND parameters, specific to the 'linux' system
  ! double, octal and logic entries added by nhs

  integer, parameter :: single = 1
  integer, parameter :: si = single
  integer, parameter :: double = 2
  integer, parameter :: db = double
  integer, parameter :: quad = 2
  integer, parameter :: qd = quad
  integer, parameter :: oct = 2
  integer, parameter :: oc = oct

  integer, parameter :: logic = 1
  integer, parameter :: lg = logic

end module kind_mod

